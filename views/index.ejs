<div class="author">
  <h1 class="author__heading">Hi, I am Duckmaniac</h1>
  <p class="author__body">Web developer and rapper.</p>
</div>
<img
  src="/img/abc.jpg"
  alt="person looking out through window"
  class="hero-image"
  width="981"
  height="528"
/>
<section class="articles">
  <h2 class="articles__heading">Latest Posts</h2>
  <ul class="articles-ul">
    <% data.forEach(post => { %>
    <li>
      <a href="/post/<%= post._id %>">
        <span><%= post.title %></span>
        <span class="article-list__date"
          ><%= post.createdAt.toDateString() %></span
        >
      </a>
    </li>
    <% }) %>
  </ul>
  <% if (currentPage !== null) { %>
  <a href="/?page=<%= currentPage %>" class="pagination"
    >&lt; View Older Posts</a
  >
  <% } %>
</section>
