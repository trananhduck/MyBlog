<div class="admin-title">
  <h2>Các bài viết</h2>
  <a href="/add-post" class="button">+ Thêm bài viết</a>
</div>

<ul class="admin-posts">
  <% data.forEach(post => { %>

  <li>
    <a href="/post/<%= post._id %>"> <%= post.title %> &nearr; </a>
    <div class="admin-post-controls">
      <a href="/edit-post/<%= post._id %>" class="btn">Sửa bài viết</a>

      <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
        <input type="submit" value="Xóa" class="btn-delete btn" />
      </form>
    </div>
  </li>

  <% }) %>
</ul>
